# Multi-stage Production Dockerfile for React Landing Page

# Stage 1: Build the React application
FROM node:20-alpine AS builder

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy source code
COPY . .

# Build the application
RUN npm run build

# Stage 2: Serve with Nginx
FROM nginx:alpine

# Remove default nginx config
RUN rm /etc/nginx/conf.d/default.conf

# Copy custom nginx config
COPY nginx.conf /etc/nginx/conf.d/landing-page.conf

# Copy built files to /usr/share/nginx/html/landing-page
RUN mkdir -p /usr/share/nginx/html/landing-page
COPY --from=builder /app/dist /usr/share/nginx/html/landing-page

# Expose port 80
EXPOSE 80

# Start nginx
CMD ["nginx", "-g", "daemon off;"]
